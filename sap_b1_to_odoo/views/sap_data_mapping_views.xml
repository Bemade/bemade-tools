<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sap_data_mapping_view_tree" model="ir.ui.view">
        <field name="name">sap.data.mapping.view.tree</field>
        <field name="model">sap.data.mapping</field>
        <field name="arch" type="xml">
            <tree string="SAP Data Mapping" editable="bottom" multi_edit="True">
                <field name="sap_db_id"/>
                <field name="sap_table_name"/>
                <field name="sap_col_name"/>
                <field name="odoo_model_name"/>
                <field name="odoo_field_name"/>
            </tree>
        </field>
    </record>
    <record id="sap_data_mapping_view_search" model="ir.ui.view">
        <field name="name">sap.data.mapping.view.search</field>
        <field name="model">sap.data.mapping</field>
        <field name="arch" type="xml">
            <search string="SAP Data Mapping">
                <field name="sap_db_id"/>
                <field name="sap_table_name"/>
                <field name="sap_col_name"/>
                <field name="odoo_model_name"/>
                <field name="odoo_field_name"/>
                <filter string="Database" name="groupby_sap_db_id"
                        context="{'group_by': 'sap_db_id'}"/>
            </search>
        </field>
    </record>
</odoo>