<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sap_database_view_tree" model="ir.ui.view">
        <field name="name">sap.database.view.tree</field>
        <field name="model">sap.database</field>
        <field name="arch" type="xml">
            <tree string="SAP Database" editable="bottom" multi_edit="True">
                <field name="database_host"/>
                <field name="database_port"/>
                <field name="database_username"/>
                <field name="database_password"
                       password="True"/>
                <field name="database_name"/>
                <field name="database_schema"/>
                <button type="object" name="action_import_all" string="Import Records"
                        class="btn btn-primary"/>
            </tree>
        </field>
    </record>
</odoo>